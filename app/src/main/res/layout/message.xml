<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/message_holder" >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/message_background"
        android:orientation="vertical"

        >

        <!--
        <TextView
            android:id="@+id/time_remaining"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        -->

        <TextView
            android:id="@+id/message_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text=""/>

        <TextView
            android:id="@+id/message_sender"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/time_remaining"
            android:layout_alignTop="@+id/time_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_body"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/message_sender"
            android:layout_alignLeft="@+id/message_sender"
            />

    </LinearLayout>


</RelativeLayout>